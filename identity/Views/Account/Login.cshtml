@model identity.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <form asp-controller="Account" asp-action="Login" method="post" asp-route-ReturlUrl="@Model.ReturnUrl">
        <div>
            <input hidden asp-for="ReturnUrl"/>
            <input asp-for="Email"/>
            <input asp-for="Password"/>
            <button type="submit">Signin</button>
        </div>
    </form>
    or 
    <a asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="@Model.ReturnUrl">
        Register
    </a>
</div>